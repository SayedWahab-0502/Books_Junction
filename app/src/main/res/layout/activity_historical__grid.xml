<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="6dp"
        android:id="@+id/toolbar_ssc"
        android:minHeight="?actionBarSize"
        >

    </android.support.v7.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="860dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="175dp"
            android:layout_height="154dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            app:srcCompat="@drawable/ic_launcher_background" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="364dp"

            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="412sp"

            android:background="#0a463f">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/pricegrid111"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:text="Price :-"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pricegrid"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="monospace"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/authorgrid111"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:text="Author :-"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/authorgrid"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="monospace"
                    android:paddingLeft="3sp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/language111"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:text="Language :-"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="monospace"
                    android:paddingLeft="3sp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/paperback"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:text="Paperback :-"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/paperbackdata"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="monospace"
                    android:paddingLeft="3sp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:text="Publisher :-"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/publisherdata"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="monospace"
                    android:paddingLeft="7dp"

                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/dimension"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:text="Package Dimension :-"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productdimensiondata"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="monospace"
                    android:paddingLeft="3sp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:text="Product Code :-"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/codenodata"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="monospace"
                    android:paddingLeft="3sp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

            </TableRow>

        </TableLayout>


        <Button
            android:id="@+id/button_ssc"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/button_round_login"
            android:gravity="center"
            android:text="Add to Bag"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/textView15"
            android:layout_width="269dp"
            android:layout_height="79dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"

            android:layout_marginTop="370sp"

            android:background="@drawable/cell_shape"
            android:text="Product Detail..."
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>