<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content222"
    android:orientation="vertical"
    tools:context=".Fragments.TabListClass.Twelveth_Tablist">

<android.support.design.widget.AppBarLayout
    android:id="@+id/appbar222"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:fitsSystemWindows="true">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="1.5dp"
        app:tabIndicatorColor="@color/cornsilk"
        android:background="@color/colorPrimaryDark">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science"

            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commerce" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arts" />

    </android.support.design.widget.TabLayout>
</android.support.design.widget.AppBarLayout>


<android.support.v4.view.ViewPager
    android:id="@+id/viewpager222"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</LinearLayout>
